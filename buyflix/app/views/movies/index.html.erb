<div class="row">
<% @movies.each do |movie| %>
<div class="col-sm-6">
	<div class="thumbnail">
		<a href="/movies/<%= movie.id %>"><img src="/assets/<%=movie.image %>"></a>
		<div class="caption">
			<h3><a href="/movies/<%= movie.id %>"><%=movie.name %></a></h3>
			<%= movie.summary %>
		</div>
	</div>
</div>
<% end %>
</div>